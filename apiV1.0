#about login

//获取当前登录用户id
GET /SwenNews/api/v1/session
return
{
    status: 1/0         //操作结果
    user_id:           //当前用户id  ,未登陆为-1
}

//用户登录
POST /SwenNews/api/v1/session
{
    username:
    password:
}
return
{
    status: 1/0         //操作结果
}

//用户登出
DELETE /SwenNews/api/v1/session
{
    user_id：
}
return
{
    status:
}


#about register
GET /SwenNews/api/v1/user
{
    username:       //用户名或者邮箱
}
return
{
    status: 1/0         //操作结果
    exist:           //用户名是否已经存在
}

//用户注册
POST /SwenNews/api/v1/user
